#console
  .console-card-group-reward
    ul.reward-all.console-card
      each item in theme.reward.QR_code
        li.reward-item
          a(href=url_for(item.link || item.img), target='_blank')
            img.post-qr-code-img(alt=item.text, src=url_for(item.img))
          .post-qr-code-desc=item.text
  .console-card-group
    button.close-btn(onclick='btf.hideConsole()', href='javascript:void(0);')
      i.fas.fa-circle-xmark(style="font-size: 35px;")

    .console-card-group-left
      !=partial('includes/widget/card_newest_comment', {}, {cache: true})
    - const nav_console_music_enable = theme.nav_music.console_widescreen_music
    .console-card-group-right
      .console-card.tags(onclick='btf.hideConsole()')
        .card-content
          if nav_console_music_enable
            .author-content-item-tips 音乐
            span.author-content-item-title 灵魂的碰撞💥
          else 
            .author-content-item-tips 兴趣点
            span.author-content-item-title 寻找你感兴趣的领域
            !=partial('includes/widget/card_tags', {}, {cache: true})
      .console-card.history(onclick='btf.hideConsole()')
        .item-headline
          i.fas.fa-box-archive
          span 文章
        !=partial('includes/widget/card_archives', {}, {cache: true})
  .button-group
    .console-btn-item
      a.darkmode_switchbutton(onclick='btf.switchDarkMode()', title='显示模式切换', href='javascript:void(0);')
        i.fas.fa-moon
    .console-btn-item#consoleHideAside(onclick='btf.hideAsideBtn()', title='边栏显示控制')
      a.asideSwitch
        i.fas.fa-arrows-alt-h
    .console-btn-item.on#consoleCommentBarrage(onclick='btf.switchCommentBarrage()', title='热评开关')
      a.commentBarrage
        i.fas.fa-message
    .console-btn-item#consoleMusic(onclick='btf.musicToggle()', title='音乐开关')
      a.music-switch
        i.fas.fa-music
    if theme.shortcutKey.enable
    .console-btn-item#consoleKeyboard(onclick='btf.keyboardToggle()', title='快捷键开关')
      a.keyboard-switch
        i.fas.fa-keyboard
  .console-mask(onclick='btf.hideConsole()', href='javascript:void(0);')
